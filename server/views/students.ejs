<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Student List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      h2 {
        text-align: center;
      }
      table {
        border-collapse: collapse;
        width: 70%;
        margin: 20px auto;
      }
      th,
      td {
        border: 1px solid #ccc;
        padding: 8px 12px;
        text-align: center;
      }
      th {
        background-color: #f2f2f2;
      }
      .btn {
        display: inline-block;
        padding: 10px 18px;
        margin: 5px;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }
      .btn:hover {
        background-color: #2980b9;
      }
      .action-btn {
        padding: 6px 12px;
        margin: 2px;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <h2>Student Table</h2>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Grade</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><%= student.grade %></td>
          <td>
            <a class="btn action-btn" href="/students/<%= student._id %>">View</a>
            <a class="btn action-btn" href="/students/<%= student._id %>/edit">Edit</a>
            <a class="btn action-btn" href="/students/<%= student._id %>/delete">Remove</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <div style="text-align: center">
      <a href="/" class="btn">Home</a>
      <a href="/students/add" class="btn">Add Student</a>
    </div>
  </body>
</html>
